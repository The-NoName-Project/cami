generator client {
  provider = "prisma-client-js"
  binaryTargets   = ["native", "rhel-openssl-3.0.x"]
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  password String
}

model Projects {
  id Int @id @default(autoincrement())
  name String
  description String
  image String
}

model Tools {
  id Int @id @default(autoincrement())
  name String
  description String
  ability String
  image String
  quote Quote[]
}

model Quote {
  id Int @id @default(autoincrement())
  name String
  number String
  email String
  start_date DateTime
  end_date DateTime
  details String
  tool_id Int
  tools Tools @relation(fields: [tool_id], references: [id])
}